.wrap-head
	#head
		.content 
			.row
				.col-md-12
					.col-md-2
						#logo.img-circle
							= image_tag("ava.jpg", alt: "ava", class: "")
					.col-md-4
						#info.head 
							%ul.unstyled
								%li Бондаренко Ольга Сергеевна
								/{:onmouseover => "this.style.color='#"+rand(0xffffff).to_s(16)+"';", :onmouseout=> "this.style.color='#fff';"} 
