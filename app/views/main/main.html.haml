								%li 24 года
								%li Программист (web, C#, assembler)
					.col-md-3
						#contacts.head
							%ul.unstyled
								%li 
									=link_to 'ВKонтакте', 'http://vk.com/sova_bos', :target => "_blank"
								%li
									#SkypeButton_Call_ssova_bos_1{:style => "height: 24px;"}
