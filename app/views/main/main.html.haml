											Skype.ui({
											"name": "dropdown",
											"element": "SkypeButton_Call_ssova_bos_1",
											"participants": ["ssova_bos"],
											"imageSize": 24
											});
								%li sovabos@gmail.com
								%li +7 (909) 753-66-13
								
					.col-md-3
						#blog.head
							=link_to 'Блог', blog_path
							



#mid
	.content
		.row
			.col-md-12
				.portfolio
					%dl.dl-horizontal
						%dt Образование
						%dd описание 1
						%dt Профессиональные навыки
						%dd описание 2
					- if signed_in?
						= link_to "Выйти", signout_path, method: "delete"
					- else
						= link_to "Войти", login_path
