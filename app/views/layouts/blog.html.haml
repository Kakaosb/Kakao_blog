!!!
%head
	%title Kakao Blog
	= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true 
	= javascript_include_tag 'application', 'data-turbolinks-track' => true 
	= csrf_meta_tags 
	= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons", :rel => "stylesheet"
	%script{type: "text/javascript", src: "//vk.com/js/api/openapi.js?117"}
	%script{type: "text/javascript"}
		VK.init({apiId: API_ID, onlyWidgets: true});
	
%body
	.row
		.col-md-12
			.nav-wrapper
				%ul
					%li
						=link_to 'Программирование', blog_programm_view_path, remote: :true
					%li
						=link_to 'Art', blog_arts_path, remote: :true
					%li
						=link_to 'Спорт', blog_sport_view_path, remote: :true
					%li
						=link_to 'Галлерея', remote: :true
	.row
		.col-md-12
			.content
				#articles
					/= render template: "shared/programms_show"	
	= yield 

